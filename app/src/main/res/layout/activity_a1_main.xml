<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_main_back_color">

    <TextView
        android:id="@+id/tv_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="@string/menu_a1_title"
        android:textColor="#394043"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_flag"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@id/tv_flag" />

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_ver_code_line"
        android:gravity="center"
        android:text="1"
        android:textColor="#6b7072"
        android:textSize="26sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/tv_2"
        app:layout_constraintTop_toBottomOf="@id/v_flag" />

    <TextView
        android:id="@+id/tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_ver_code_line"
        android:gravity="center"
        android:text="2"
        android:textColor="#6b7072"
        android:textSize="26sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_1"
        app:layout_constraintLeft_toLeftOf="@id/tv_1"
        app:layout_constraintRight_toRightOf="@id/tv_3"
        app:layout_constraintTop_toBottomOf="@id/v_flag" />

    <TextView
        android:id="@+id/tv_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_ver_code_line"
        android:gravity="center"
        android:text="3"
        android:textColor="#6b7072"
        android:textSize="26sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_1"
        app:layout_constraintLeft_toLeftOf="@id/tv_2"
        app:layout_constraintRight_toRightOf="@id/tv_4"
        app:layout_constraintTop_toBottomOf="@id/v_flag" />

    <TextView
        android:id="@+id/tv_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_ver_code_line"
        android:gravity="center"
        android:text="4"
        android:textColor="#6b7072"
        android:textSize="26sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_1"
        app:layout_constraintLeft_toLeftOf="@id/tv_3"
        app:layout_constraintRight_toRightOf="@id/tv_5"
        app:layout_constraintTop_toBottomOf="@id/v_flag" />

    <TextView
        android:id="@+id/tv_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_ver_code_line"
        android:gravity="center"
        android:text="5"
        android:textColor="#6b7072"
        android:textSize="26sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_1"
        app:layout_constraintLeft_toLeftOf="@id/tv_4"
        app:layout_constraintRight_toRightOf="@id/tv_6"
        app:layout_constraintTop_toBottomOf="@id/v_flag" />

    <TextView
        android:id="@+id/tv_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_ver_code_line"
        android:gravity="center"
        android:text="6"
        android:textColor="#6b7072"
        android:textSize="26sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_1"
        app:layout_constraintLeft_toLeftOf="@id/tv_5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_flag" />

</android.support.constraint.ConstraintLayout>