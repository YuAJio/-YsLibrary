<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FlashStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--================下拉选择框分割线Style================-->
    <style name="yurishiSpinnerStyle" parent="android:Widget.ListView.DropDown">
        <!--分割线颜色-->
        <item name="android:divider">#FF8E8E8E</item>
        <!--分割线高度-->
        <item name="android:dividerHeight">1dp</item>
        <item name="android:listSelector">@drawable/selector_yurishi_spinner</item>
    </style>
    <!--================下拉选择框分割线Style================-->
</resources>
